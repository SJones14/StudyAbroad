@page
@model AddUniversityModel
@{
    ViewData["Title"] = "Add University";
}
<h1>@ViewData["Title"]</h1>



<body class="text-center">
    <p>Let's add a university.</p>
    <div class="form-floating mx-auto mb-3 col-md-6">
        <input type="email" class="form-control" id="universityName" placeholder="Hogwarts School of Witchcraft and Wizardry">
        <label for="universityName">University name</label>
    </div>
    <div class="form-floating mx-auto mb-3 col-md-6">
        <input type="text" class="form-control" id="countryName" placeholder="Country">
        <label for="countryName">Country name</label>
    </div>

    <div class="form-floating mx-auto mb-3 col-md-6">
        <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
            <option selected></option>
            <option value="1">Asia</option>
            <option value="2">Africa</option>
            <option value="3">Australia</option>
            <option value="4">Europe</option>
            <option value="5">North America</option>
            <option value="6">South America</option>
        </select>
        <label for="floatingSelect">Choose continent</label>
    </div>

    <div class="form-floating mb-3 mx-auto col-md-6">
        <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
            <option selected></option>
            <option value="1">1 semester</option>
            <option value="2">2 semesters</option>
            <option value="3">3 semesters</option>
            <option value="4">4 semesters</option>

        </select>
        <label for="floatingSelect">Duration of study abroad program continent</label>
    </div>
    <div class="form-floating mx-auto mb-3 col-md-6">
        <input type="text" class="form-control" id="housingType" placeholder="dorm">
        <label for="housingType">Housing type</label>
    </div>
    <div class="mt-5 mx-auto col-md-6">
        <label for="formFileMultiple" class="form-label">Upload pictures of this study abroad destination</label>
        <input class="form-control w-50" type="file" id="formFileMultiple" multiple>
    </div>


    <input class="btn btn-primary mt-3" type="submit" value="Submit">


</body>
